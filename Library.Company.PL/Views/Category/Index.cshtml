@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="w-75 mx-auto">
<h1>Categories</h1>
<div class="row my-5 g-3">
    <form  class="d-flex align-items-center col-9">
        <input type="search" class="form-control w-50" placeholder="Search by Name"/>
        <button class="btn btn-secondary py-2">Search</button>
    </form>
    <a asp-action="Create" class="btn btn-primary col-3 py-2">
        <i class="fas fa-plus"></i>
        Add New Category
    </a>

</div>

    @if (Model.Count() == 0)
    {
        <div class="card  shadow py-5 shadow-lg border-primary-subtle">
            <div class="card-body text-center">

                <i class="fas fa-book-open  bookIcon  text-primary"></i>
                <p class="text-muted mt-3 ">No Categories available</p>
                <a class="btn btn-primary text-capitalize col-6 mt-2 py-2" asp-action="Create">
                    <i class="fas fa-plus"></i>
                    add new Category
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark table-hover table-striped table-bordered text-center">

                <thead class="table-light">
                    <tr>

                        <th>@Html.DisplayNameFor(c => c.Name)</th>
                        <th>Details</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
        @foreach(var item in Model)
        {
          
                        <tr>
                            <td>@item.Name</td>
                        <partial name="ButtonsPartialView" model="@item.Id" />
                        </tr>
               
        }
                </tbody>

            </table>
        </div>
    }
</div>

