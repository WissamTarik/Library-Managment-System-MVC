@model Category
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-dark text-white text-center">
                    <h4>Category Details</h4>
                </div>
                <div class="card-body">

                    <partial name="CategoryPartialView/_DetailsAndDeletePartialView" />

                    <div class="d-grid">
                        <a class="btn btn-warning" asp-route-id="@Model.Id" asp-action="Edit">
                            Edit
                            <i class="fas fa-pen-alt ms-2"></i>

                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary mt-2">
                            Return to Category List

                            <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


